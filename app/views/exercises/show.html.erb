<% provide(:title, @exercise.name ) %>
<%- model_class = Exercise -%>
<div class="page-header">
  <h1><%=@exercise.name %></h1>
</div>

<dl class="dl-horizontal">
  <p>There will be something in here. Sometime.</p>
  <%= userpr(@exercise.id) %>
  <p>Website average weight: <%= website_average(@exercise) %></p>
  <p>Website best: <%= website_best(@exercise) %></p>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              exercises_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_exercise_path(@exercise), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              exercise_path(@exercise),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
