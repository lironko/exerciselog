<div class='form-inline exercise-record nested-fields well'>
  <%= f.association :exercise %>
  
  <%= link_to_remove_association 'remove exercise' , f , class: 'btn btn-danger btn-xs', :data => {:confirm => 'do you really want to do this?'} %>
  <div class="sets nested-fields">
    <%= f.simple_fields_for :exercise_sets do |exercise_set| %>
      <%= render 'exercise_set_fields', :f => exercise_set %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add a set', f, :exercise_sets, class: 'btn btn-default btn-xs' %>
    </div>
  </div>
</div>