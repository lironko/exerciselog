<%= simple_form_for(@workout) do |f| %>
  <%= f.input :date, as: :date %>
  <%= f.input :notes %>
  <ul id="exercises">
      <span class="h3">Exercises</span>
      <%= link_to_add_association 'add exercise', f, :exercise_records, class: 'btn btn-primary btn-xs', :data => { "association-insertion-method" => "append" }  %>
    <%= f.simple_fields_for :exercise_records do |exercise_record| %>
      <%= render 'exercise_record_fields', :f => exercise_record %>
    <% end %>
  </ul>
  <%= f.button :submit %>
<% end %>
